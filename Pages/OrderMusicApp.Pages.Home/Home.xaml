<Page x:Class="OrderMusicApp.Pages.Home.Home"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:OrderMusicApp.Pages.Home"
      xmlns:vm="clr-namespace:OrderMusicApp.Pages.Home.ViewModel" xmlns:AudioDeviceSelector="clr-namespace:OrderMusicApp.Component.Home.AudioDeviceSelector;assembly=OrderMusicApp.Component.Home.AudioDeviceSelector"
      d:DataContext="{d:DesignInstance Type=vm:HomeViewModel}"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Background="White"
      Title="Home">

    <Grid VerticalAlignment="Top">
        <Grid.RowDefinitions>
            <RowDefinition></RowDefinition>
            <RowDefinition> </RowDefinition>
        </Grid.RowDefinitions>
        <AudioDeviceSelector:AudioDeviceSelector Height="25" AudioDevices="{Binding AudioDeviceList}" AudioDeviceChanged="AudioDeviceSelector_AudioDeviceChanged"></AudioDeviceSelector:AudioDeviceSelector>
    </Grid>
</Page>
